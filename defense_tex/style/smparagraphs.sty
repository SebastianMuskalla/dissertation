% newline after paragraph, paragraph bold and underlined
\renewcommand{\paragraph}%
{%
    \scr@startsection%
        {paragraph}%                       % name
        {4}%                               % level
        {\z@}%                             % indent
        {0ex \@plus -1ex \@minus -.2ex}%   % beforeskip
        {0.01ex \@plus .2ex}%              % afterskip
        {\normalfont\normalsize\bfseries}% % style of heading
}%

