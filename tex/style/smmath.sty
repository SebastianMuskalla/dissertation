% corresponds to
\newcommand\corrto{%
    \let\savearraystretch\arraystretch%
    \renewcommand\arraystretch{0.3}%
    \begin{array}{c}%
        \stretchto{%
            \scalerel*[\widthof{=}]{\wedge}%
            {\rule{1ex}{3ex}}%
        }{0.5ex}\\%
        =%
    \end{array}%
    \let\arraystretch\savearraystretch%
}

